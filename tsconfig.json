{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@playwright/test": ["./vendor/playwright-test"],
      "playwright": ["./vendor/playwright"],
      "@axe-core/playwright": ["./vendor/axe-playwright"],
      "@storybook/react": ["./vendor/storybook-react"],
      "msw": ["./vendor/msw"],
      "npm-run-all": ["./vendor/npm-run-all"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
